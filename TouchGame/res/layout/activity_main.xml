<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.sample.touchgame.MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/TouchButton1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="128dp"
        android:text="Button" />

    <Button
        android:id="@+id/TouchButton6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TouchButton5"
        android:layout_alignBottom="@+id/TouchButton5"
        android:layout_alignLeft="@+id/TouchButton3"
        android:text="Button" />

    <Button
        android:id="@+id/TouchButton7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TouchButton1"
        android:layout_below="@+id/TouchButton5"
        android:layout_marginTop="48dp"
        android:text="Button" />

    <Button
        android:id="@+id/TouchButton8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TouchButton2"
        android:layout_below="@+id/TouchButton4"
        android:layout_marginTop="45dp"
        android:text="Button" />

    <Button
        android:id="@+id/TouchButton9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TouchButton7"
        android:layout_alignBottom="@+id/TouchButton7"
        android:layout_toRightOf="@+id/TouchButton2"
        android:text="Button" />

    <Button
        android:id="@+id/TouchButton4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TouchButton7"
        android:layout_alignLeft="@+id/TouchButton7"
        android:text="Button" />

    <Button
        android:id="@+id/TouchButton2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TouchButton3"
        android:layout_alignBottom="@+id/TouchButton3"
        android:layout_alignLeft="@+id/TouchButton5"
        android:text="Button" />

    <Button
        android:id="@+id/TouchButton3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TouchButton1"
        android:layout_alignBottom="@+id/TouchButton1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:text="Button" />

    <Button
        android:id="@+id/TouchButton5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Button" />
</RelativeLayout>
